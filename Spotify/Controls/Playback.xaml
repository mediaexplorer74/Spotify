<UserControl
    x:Class="Spotify.Controls.Playback"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="127"
    d:DesignWidth="500"
    Unloaded="UserControl_Unloaded">

    <Control.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Control.Resources>

    <RelativePanel Background="{ThemeResource PlaybackBackground}">

        <RelativePanel
            Name="MainPanel"
            RelativePanel.AlignTopWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.Above="TvSafeBottomBorder"
            Height="100">

            <ProgressRing
                Name="LoadingTrack"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignTopWith="TrackName"
                RelativePanel.AlignBottomWith="TrackArtist"
                Width="60"
                Height="60"
                Foreground="{ThemeResource SystemAccentColor}"
                IsActive="True"/>

            <Image
                Name="AlbumArt"
                RelativePanel.AlignLeftWithPanel="True"
                Height="100"
                Width="100"
                Margin="0,0,10,0"/>

            <TextBlock
                Name="TrackName"
                RelativePanel.RightOf="AlbumArt"
                RelativePanel.LeftOf="MiniControls"
                RelativePanel.AlignTopWithPanel="True"
                HorizontalAlignment="Stretch"
                Style="{StaticResource SubheaderTextBlockStyle}"
                Text=""
                TextAlignment="Center"/>

            <TextBlock
                Name="TrackArtist"
                RelativePanel.AlignLeftWith="TrackName"
                RelativePanel.LeftOf="MiniControls"
                RelativePanel.Below="TrackName"
                Style="{StaticResource TitleTextBlockStyle}"
                Text=""
                TextAlignment="Center"/>

            <TextBlock
                Name="CurrentTime"
                RelativePanel.RightOf="AlbumArt"
                RelativePanel.AlignBottomWithPanel="True"
                Margin="10,0,0,0"
                Style="{StaticResource BodyTextBlockStyle}"
                Text="00:00"/>

            <ProgressBar
                Name="Progress"
                RelativePanel.RightOf="CurrentTime"
                RelativePanel.LeftOf="Duration"
                RelativePanel.AlignBottomWithPanel="True"
                HorizontalAlignment="Stretch"
                Height="18"
                Margin="10,0,10,0"
                Foreground="{ThemeResource SystemAccentColor}"
                Background="{ThemeResource PlaybackProgressBackground}"/>

            <TextBlock
                Name="Duration"
                RelativePanel.LeftOf="MiniControls"
                RelativePanel.AlignBottomWithPanel="True"
                Margin="0,0,10,0"
                Style="{StaticResource BodyTextBlockStyle}"
                Text="00:00"/>

            <RelativePanel 
                Name="MiniControls"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.LeftOf="Previous"
                HorizontalAlignment="Stretch">

                <Button
                    Name="Volume"
                    RelativePanel.AlignTopWithPanel="True"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Style="{StaticResource PlaybackSmallerButtonStyle}"
                    Content="&#xE767;"
                    ToolTipService.ToolTip="Volume"
                    Click="Volume_Click"/>

                <Slider
                    Name="VolumeSlider"
                    Visibility="Collapsed"
                    RelativePanel.Above="Volume"
                    RelativePanel.AlignBottomWithPanel="True"
                    RelativePanel.AlignTopWithPanel="True"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="1,10,0,10"
                    Orientation="Vertical"
                    TickPlacement="None"
                    SmallChange="10"
                    LostFocus="VolumeSlider_LostFocus"
                    ValueChanged="VolumeSlider_ValueChanged"/>

                <Button
                    Name="Shuffle"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Style="{StaticResource PlaybackSmallerButtonStyle}"
                    Content="&#xE8B1;"
                    ToolTipService.ToolTip="Shuffle"
                    Click="Shuffle_Click"/>

                <Button
                    Name="ShuffleEnabled"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Style="{StaticResource PlaybackSmallerButtonStyle}"
                    Foreground="Green"
                    Visibility="Collapsed"
                    Content="&#xE8B1;"
                    ToolTipService.ToolTip="Shuffle"
                    Click="Shuffle_Click"/>

                <Button
                    Name="Repeat"
                    RelativePanel.AlignBottomWithPanel="True"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Style="{StaticResource PlaybackSmallerButtonStyle}"
                    Content="&#xEC57;"
                    ToolTipService.ToolTip="Repeat"
                    Click="Repeat_Click"/>

                <Button
                    Name="RepeatEnabled"
                    RelativePanel.AlignBottomWithPanel="True"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Style="{StaticResource PlaybackSmallerButtonStyle}"
                    Foreground="Green"
                    Visibility="Collapsed"
                    Content="&#xEC58;"
                    ToolTipService.ToolTip="Repeat"
                    Click="Repeat_Click"/>

            </RelativePanel>

            <Button
                Name="Play"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                Style="{StaticResource PlaybackLargeButtonStyle}"
                Foreground="Green"
                Content="&#xE768;"
                ToolTipService.ToolTip="Play"
                Click="PlayPause_Click"/>

            <Button
                Name="Pause"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                Style="{StaticResource PlaybackLargeButtonStyle}"
                Foreground="{ThemeResource PlaybackButtonForeground}"
                Content="&#xE769;"
                ToolTipService.ToolTip="Pause"
                Click="PlayPause_Click"/>

            <Button
                Name="Previous"
                RelativePanel.LeftOf="Next"
                RelativePanel.AlignBottomWithPanel="True"
                Margin="0,5,2,0"
                Style="{StaticResource PlaybackSmallButtonStyle}"
                Content="&#xE892;"
                ToolTipService.ToolTip="Previous"
                Click="Previous_Click"/>

            <Button
                Name="Next"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignBottomWithPanel="True"
                Margin="2,5,0,0"
                Style="{StaticResource PlaybackSmallButtonStyle}"
                Content="&#xE893;"
                ToolTipService.ToolTip="Next"
                Click="Next_Click"/>

        </RelativePanel>

        <RelativePanel
            Name="TvSafeBottomBorder"
            RelativePanel.AlignBottomWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.AlignRightWithPanel="True"
            Height="27">

        </RelativePanel>

    </RelativePanel>

</UserControl>
